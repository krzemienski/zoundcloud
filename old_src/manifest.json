{
  "name": "ZoundCloud",
  "description": "Adds download buttons to SoundCloud pages.",
  "version": "1.1.3",
  "manifest_version": 2,
  "permissions": [
    "downloads",
    "notifications",
    "tabs",
    "webNavigation",
    "*://soundcloud.com/*",
    "*://api.soundcloud.com/*"
  ],
  "icons": {
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
},
  "content_scripts": [
    {
      "matches": [
        "*://soundcloud.com/*"
      ],
      "css": [
        "css/content.css"
      ],
      "js": [
        "js/content-playlist.js",
        "js/content-track.js",
        "js/content-tracklist.js"
      ],
      "run_at": "document_end"
    }
  ]
}