{
  "name": "zoundcloud",
  "version": "1.1.0-SNAPSHOT",
  "private": true,
  "description": "Adds download buttons to SoundCloud pages.",
  "main": "index.js",
  "engines": {
    "node": ">=7.6"
  },
  "scripts": {
    "build": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "build:watch": "webpack --config webpack.dev.js --watch",
    "ci": "run-s -c test:coverage:ci build build:prod",
    "coveralls": "cat coverage/HeadlessChrome/lcovonly | coveralls",
    "lint": "tslint -p .",
    "precommit": "run-s test:coverage build build:prod",
    "start": "yarn run build:watch",
    "test": "karma start karma.conf.js",
    "test:coverage": "karma start karma.conf.js --reporters spec,karma-typescript",
    "test:coverage:ci": "run-s test:coverage coveralls",
    "test:stability": "run-s test test test test test",
    "test:watch": "karma start karma.conf.js --single-run false"
  },
  "pre-commit": "precommit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xtangle/ZoundCloud.git"
  },
  "author": "xtangle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xtangle/ZoundCloud/issues"
  },
  "homepage": "https://github.com/xtangle/ZoundCloud#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chrome": "^0.0.65",
    "@types/jquery": "^3.3.1",
    "@types/mocha": "^5.2.0",
    "@types/mocha-each": "^1.1.0",
    "@types/node": "^10.0.8",
    "@types/sinon": "^4.3.0",
    "@types/sinon-chai": "^2.7.31",
    "@types/sinon-chrome": "^2.2.3",
    "browser-id3-writer": "^4.0.0",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "coveralls": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "jquery": "^3.3.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^3.0.12",
    "mocha": "^5.1.1",
    "mocha-each": "^1.1.0",
    "npm-run-all": "^4.1.3",
    "pre-commit": "^1.2.2",
    "rxjs": "^6.1.0",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "sinon-chrome": "^2.3.2",
    "ts-loader": "^4.3.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.2.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.8.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.1",
    "webpack-chrome-extension-reloader": "^0.7.0",
    "webpack-cli": "^2.1.3",
    "webpack-merge": "^4.1.2",
    "yargs": "^11.0.0"
  }
}
