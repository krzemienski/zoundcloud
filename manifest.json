{
  "name": "Zoundcloud",
  "description": "Adds a download button to your Soundcloud playlists",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [
    "downloads",
    "notifications",
    "tabs",
    "webNavigation",
    "*://soundcloud.com/*",
    "*://api.soundcloud.com/*"
  ],
  "icons": {
    "128": "assets/images/icon128.png"
  },
  "background": {
    "scripts": [
      "lib/jquery-3.1.1.min.js",
      "src/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://soundcloud.com/*"
      ],
      "include-globs": [
        "*://soundcloud.com/?*/sets/?*"
      ],
      "exclude-globs": [
        "*://soundcloud.com/*/*/sets/*"
      ],
      "css": [
        "assets/css/content.css"
      ],
      "js": [
        "lib/jquery-3.1.1.min.js",
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ]
}